<div class="p-8 sm:p-6 md:p-8 rounded shadow-lg w-full max-w-md mx-auto">
  <h1 class="text-center text-3xl font-semibold text-gray-800 mb-6">Your Tags</h1>

  <%= form_with model: @tag, url: tags_path, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, 'Tag Name', class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, placeholder: "Enter tag name", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <%= f.submit "Create Tag", class: "w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50" %>
  <% end %>

  <ul class="space-y-4">
    <% @tags.each do |tag| %>
      <% if tag.id.present? %>  
        <li class="flex items-center justify-between bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out">
          <span class="text-lg font-medium text-gray-800"><%= tag.name %></span>
          <div class="flex space-x-4">
            <%= link_to 'Edit', edit_tag_path(tag), class: "text-blue-600 hover:text-blue-800 transition duration-200" %>
            <%= link_to 'Delete', tag_path(tag), method: :delete, data: { confirm: "Are you sure you want to delete this tag?" }, class: "text-red-600 hover:text-red-800 transition duration-200" %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
