<div class="bg-white p-8 sm:p-6 md:p-8 rounded shadow-lg w-full max-w-md mx-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="text-3xl sm:text-2xl font-semibold text-center mb-6">Forgot your password?</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between items-center ">
      <%= f.submit "Send me reset password instructions", class: "no-underline hover:underline w-full py-2 text-gray-700 rounded-md hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between items-center text-sm text-gray-700 mt-4">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>
</div>

