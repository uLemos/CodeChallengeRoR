<div class="bg-white p-8 sm:p-6 md:p-8 rounded shadow-lg w-full max-w-md mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <h2 class="text-3xl sm:text-2xl font-semibold text-center mb-4">Edit <%= resource_name.to_s.humanize %></h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-1">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-1">
      <%= f.label :password, class: "block text-sm font-semibold text-gray-700" %> 
        <i class="text-sm text-gray-700">(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-sm text-gray-700"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-1">
      <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-1">
      <%= f.label :current_password, class: "block text-sm font-semibold text-gray-700" %> 
        <i class="text-sm text-gray-700">(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Update", class: "w-full py-2 bg-indigo-600 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

  <% end %>
  <div class="flex justify-between items-center mt-4">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-sm text-red-600 hover:text-red-800" %>
    <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700 text-sm" %>
  </div>
</div>


