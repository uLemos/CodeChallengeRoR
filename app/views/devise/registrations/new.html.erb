<div class="bg-white p-8 sm:p-6 md:p-8 rounded shadow-lg w-full max-w-md mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class="text-3xl sm:text-2xl font-semibold text-center mb-6">Sign Up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-semibold text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="flex justify-between items-center text-sm text-gray-700">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md mt-0 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Sign up", class: "w-full py-2 bg-indigo-600 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="flex justify-between items-center text-sm text-gray-700 mt-4">
      <%= render "devise/shared/links" %>
    </div>

  <% end %>
</div>

